<% if object.errors.any? %>
  <div class="callout panel">
    <div>
      <h3>The form has some errors</h3>
    </div>
    <div class="error-box">
      <ul class="text-left error-message">
        <% object.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  </div>
<% end %>
